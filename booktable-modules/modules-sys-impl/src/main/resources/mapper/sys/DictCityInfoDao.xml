<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.booktable.modules.dao.sys.DictCityInfoDao">

	<sql id="TABLE_NAME">dict_city_info</sql>

	<resultMap id="BaseCityInfo" type="dictCityInfoDo">
		<id column="id" property="id" />
		<result column="city_name" property="cityName" />
		<result column="city_code" property="cityCode" />
		<result column="parent_id" property="parentId" />
		<result column="loan_code" property="loanCode" />
	</resultMap>

	<select id="queryProvince" resultMap="BaseCityInfo">
        SELECT * FROM
        <include refid="TABLE_NAME" />
	    WHERE parent_id = -1 ORDER BY order_index ASC
    </select>

    <select id="queryCityByProvince"  resultMap="BaseCityInfo">
    	SELECT * FROM <include refid="TABLE_NAME" />  t WHERE t.parent_id = (
 			SELECT tc.id FROM <include refid="TABLE_NAME" />  tc WHERE tc.city_code =#{value} and tc.parent_id =-1)
    </select>


    <select id="findCityByCityCode"  resultMap="BaseCityInfo">
    	SELECT * FROM
    	<include refid="TABLE_NAME" />
    	WHERE city_code = #{city_code}
    </select>

    <select id="findCityByLoanCode" parameterType="string"  resultMap="BaseCityInfo">
    	SELECT * FROM
    	<include refid="TABLE_NAME" />
    	WHERE loan_code = #{loanCode}
    </select>

    <select id="findCityListByLoanCode" parameterType="string"  resultMap="BaseCityInfo">
    	SELECT * FROM
    	<include refid="TABLE_NAME" />
    	WHERE loan_code = #{loanCode}
    </select>

</mapper>
